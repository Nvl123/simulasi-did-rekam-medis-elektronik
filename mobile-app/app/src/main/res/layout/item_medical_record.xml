<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Diagnosis -->
        <TextView
            android:id="@+id/tv_diagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Diagnosis: Fever"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Treatment -->
        <TextView
            android:id="@+id/tv_treatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Treatment: Rest and medication"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Medications -->
        <TextView
            android:id="@+id/tv_medications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Medications: Paracetamol"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Notes -->
        <TextView
            android:id="@+id/tv_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Notes: Patient should rest"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Checkup Date -->
        <TextView
            android:id="@+id/tv_checkup_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Checkup Date: 2025-01-14"
            android:textColor="@color/text_hint"
            android:textSize="12sp" />

        <!-- Doctor and Hospital Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Doctor: Dr. Smith"
                android:textColor="@color/text_hint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_hospital_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hospital: DID Hospital"
                android:textColor="@color/text_hint"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
