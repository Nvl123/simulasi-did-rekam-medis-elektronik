<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/primary_light"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_orange_light"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Patient Name and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_patient_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="👤 Patient Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark" />

            <TextView
                android:id="@+id/tv_verification_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ VERIFIED"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/card_orange_elevated"
                android:padding="8dp"
                android:textColor="@color/success" />

        </LinearLayout>

        <!-- Patient Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_patient_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/card_orange_elevated"
                android:padding="12dp"
                android:text="🎂 Age: 25"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_patient_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/card_orange_elevated"
                android:padding="12dp"
                android:text="⚥ Male"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- DID -->
        <TextView
            android:id="@+id/tv_patient_did"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_orange_elevated"
            android:padding="12dp"
            android:text="🔗 DID: 12345678..."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="monospace" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_patient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_secondary_orange"
                android:padding="12dp"
                android:text="👁️ View Details"
                android:textColor="@color/primary_dark"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_qr_code_scanner"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:iconTint="@color/primary_dark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_share_patient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_primary_orange"
                android:padding="12dp"
                android:text="📤 Share"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_qr_code"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:iconTint="@color/white" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>




