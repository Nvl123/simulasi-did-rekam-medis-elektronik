<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MainActivity">

    <!-- Header Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:strokeColor="@color/primary_light"
        app:strokeWidth="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_orange_light"
            android:orientation="vertical"
            android:padding="32dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_medical"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:text="🏥 DID Medical Records"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Secure, Decentralized Medical Records"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Main Buttons Container -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/status_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_card">

        <!-- Scan QR Code Button Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/primary_light"
            app:strokeWidth="2dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_scan_qr"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/button_primary_orange"
                android:padding="20dp"
                android:text="📱 Scan QR Code"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_qr_code_scanner"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/white" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Digital Wallet Button Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/primary_light"
            app:strokeWidth="2dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_digital_wallet"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/button_primary_blue"
                android:padding="20dp"
                android:text="💼 Digital Wallet"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_wallet"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/white" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Security Settings Button Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/primary_light"
            app:strokeWidth="2dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_authentication"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/button_secondary_orange"
                android:padding="20dp"
                android:text="🔒 Security Settings"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_security"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/primary_dark" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Status Container -->
    <LinearLayout
        android:id="@+id/status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CAC7C7"
                android:padding="12dp"
                android:text="🔄 Checking connection..."
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Version Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/primary_light"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CAC7C7"
                android:padding="8dp"
                android:text="📱 Version 1.0.0"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>